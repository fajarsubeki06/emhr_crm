<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="emhr_websetting_form_view" model="ir.ui.view">
        <field name="name">Web Setting</field>
        <field name="model">emhr.web_setting</field>
        <field name="arch" type="xml">
            <form create="false">
                <sheet>
                    <group>
                        <field name="title_desc"/>
                        <field name="desc"/>
                        <field name="img_front" widget="image" class="oe_left oe_avatar"/>
                        <field name="video_url" placeholder="https://www.youtube.com/embed/ + Kode Video Anda"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="emhr_websetting_tree_view" model="ir.ui.view">
        <field name="name">Web Setting</field>
        <field name="model">emhr.web_setting</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="title_desc"/>
                <field name="desc"/>
                <field name="video_url" />
                <field name="img_front" widget="image" class="oe_left oe_avatar"/>
            </tree>
        </field>
    </record>

</odoo>