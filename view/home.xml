<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="eht_home" name="Home">
        <t t-call="website.layout">
            <div class="mt-5 mb-5">
                <t t-set="websetting" t-value="request.env['emhr.web_setting'].search([])"/>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <br/>
                            <div class="col-md-9">
                                <p>
                                    <h2 class="eht_title font-weight-bold">
                                        <t t-if="websetting.title_desc is False">
                                            HRIS Application System The Best and Complete
                                        </t>
                                        <t t-if="websetting.title_desc is not False">
                                            <t t-esc="websetting.title_desc"/>
                                        </t>
                                    </h2>
                                </p>
                            </div>
                            <div class="col-md-12">
                                <p>
                                    <h4>
                                        <t t-if="websetting.desc is False">
                                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                                            tempor
                                            incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis
                                            nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
                                            consequat.
                                            Excepteur sint occaecat cupidatat non proident.
                                        </t>
                                        <t t-if="websetting.desc is not False">
                                            <t t-esc="websetting.desc"/>
                                        </t>
                                    </h4>
                                </p>
                                <br/>
                                <p>
                                    <a t-attf-href="/demo_trial">
                                        <button class="btn-trial">Trial &#38; Buy</button>
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="col-lg-6 d-flex flex-row justify-content-center">
                            <br/>
                            <div class="container-fluid">
                                <img src="/em-hr_crm/static/images/play.png" class="img-fluid mx-auto d-block imgplay"
                                     data-toggle="modal" data-target="#exampleModalCenter"/>
                                <t t-if="websetting.img_front is False">
                                    <img src="/em-hr_crm/static/images/illustration.png" alt="Los Angeles"
                                         class="img-fluid mx-auto d-block mb-3 w-75" style="height: 375px;"/>
                                </t>
                                <t t-if="websetting.img_front is not False">
                                    <img t-attf-src="data:image/*;base64, {{websetting.img_front}}" alt="Los Angeles"
                                         class="img-fluid mx-auto d-block mb-3 w-75" style="height: 375px;"
                                    />
                                </t>
                            </div>
                        </div>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                         aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <div class="embed-responsive embed-responsive-16by9">
                                        <iframe id="yt-player" class="embed-responsive-item"
                                                t-attf-src="{{websetting.video_url}}"/>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-feature mt-5">
                    <div class="container pt-5 pb-5">
                        <div class="row d-flex justify-content-center ">
                            <h2 class="eht-title-feature">
                                <hr class="eht-line"/>
                                <p>
                                    Features
                                </p>
                            </h2>
                        </div>
                        <div class="row mx-auto my-auto">
                            <div id="recipeCarousel" class="carousel slide w-100" data-ride="carousel">
                                <div class="carousel-inner w-100" role="listbox">

