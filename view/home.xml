<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="eht_home" name="Home">
        <t t-call="website.layout">
            <div class="mb-5">
                <t t-set="websetting" t-value="request.env['emhr.web_setting'].search([])"/>
