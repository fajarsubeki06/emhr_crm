<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="eht_pricing" name="Pricing">
        <t t-call="website.layout">
            <div class="container">
                <div class="row d-flex justify-content-center mt-5">
                    <h2 class="eht-title-feature">
                        <hr class="eht-line"/>
                        Pricing
                    </h2>
                </div>
                <div class="row justify-content-center mt-3">
                    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="pills-silver-tab" data-toggle="pill" href="#pills-silver"
                               role="tab" aria-controls="pills-silver" aria-selected="true">Package Silver
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="pills-gold-tab" data-toggle="pill" href="#pills-gold"
                               role="tab" aria-controls="pills-gold" aria-selected="false">Package Gold
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="pills-platinum-tab" data-toggle="pill" href="#pills-platinum"
                               role="tab" aria-controls="pills-platinum" aria-selected="false">Package Platinum
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="pills-custom-tab" data-toggle="pill" href="#pills-custom"
                               role="tab" aria-controls="pills-custom" aria-selected="false">Customize
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="row justify-content-center mt-1 mb-4">
                    <div class="col-12 col-sm-5">
                        <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="pills-silver" role="tabpanel"
                                 aria-labelledby="pills-silver-tab">
                                <p class="eht-subtile font-weight-bold text-center mb-0">Memiliki kapasitas 1-25 user</p>
                                <hr class="eht-line"/>
                                <t t-call="em-hr_crm.ic_pricing_view"/>
                            </div>
                            <div class="tab-pane fade" id="pills-gold" role="tabpanel"
                                 aria-labelledby="pills-gold-tab">
                                <p class="eht-subtile font-weight-bold text-center mb-0">Memiliki kapasitas 1-25 user</p>
                                <hr class="eht-line"/>
                                <t t-call="em-hr_crm.ic_pricing_view"/>
                            </div>
                            <div class="tab-pane fade" id="pills-platinum" role="tabpanel"
                                 aria-labelledby="pills-platinum-tab">
                                <p class="eht-subtile font-weight-bold text-center mb-0">Memiliki kapasitas 1-25 user</p>
                                <hr class="eht-line"/>
                                <t t-call="em-hr_crm.ic_pricing_view"/>
                            </div>
                            <div class="tab-pane fade" id="pills-custom" role="tabpanel"
                                 aria-labelledby="pills-custom-tab">
                                <p class="eht-subtile font-weight-bold text-center mb-0">Memiliki kapasitas 1-25 user</p>
                                <hr class="eht-line"/>
                                <t t-call="em-hr_crm.ic_pricing_view"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                     aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Detail Paket Yang Didapat</h5>
                            </div>
                            <div class="modal-body">
                                <div class="row justify-content-center">
                                    <div class="col-12 col-md-12">
                                        <div class="card shadow" style="border-radius: 13px;">
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                    <table class="table table-striped">
                                                        <thead>
                                                            <tr>
                                                                <th>Detail</th>
                                                                <th>Support</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr>
                                                                <td>Attendance</td>
                                                                <td>Mobile &#38; Web Apps</td>
                                                            </tr>
                                                            <tr>
                                                                <td>Payrool &#38; Payment Request</td>
                                                                <td>Mobile &#38; Web Apps</td>
                                                            </tr>
                                                            <tr>
                                                                <td>Timesheet &#38; Visit</td>
                                                                <td>Mobile &#38; Web Apps</td>
                                                            </tr>
                                                            <tr>
                                                                <td>Medical Reimbursement &#38; Business Trip</td>
                                                                <td>Mobile &#38; Web Apps</td>
                                                            </tr>
                                                            <tr>
                                                                <td>Reporting Data all Module</td>
                                                                <td>Web Apps</td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-success">Buy License</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                <br/>
                <br/>
            </div>
        </t>
    </template>
</odoo>