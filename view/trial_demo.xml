<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="eht_trial_demo" name="Demo Trial">
        <t t-call="website.layout">
            <div class="container">
                <div class="row d-flex justify-content-center mt-5">
                    <h2 class="eht-title-feature">
                        <hr class="eht-line"/>
                        Free Trial
                    </h2>
                </div>
                <p class="eht-subtile font-weight-bold text-center">
                    EM-HR menyediakan free trial dengan kapasitas 10 pengguna secara gratis
                </p>
                <div class="row justify-content-center mb-5">
                    <div class="col-md-4 mb-3">
                        <div class="card shadow" style="border-radius: 13px;">
                            <div class="card-header">
                                <p class="eht-subtile font-weight-bold text-center mb-0">
                                    Choose Modules
                                </p>
                            </div>
                            <div class="card-body">
                                <div class="row justify-content-center">
                                    <form action="" class="">
                                        <div class="form-group form-checkbox row mb-0">
                                            <input type="checkbox" id="attendance" name="attendance"
                                                   class="custom-control-input"/>
                                            <label for="attendance" class="custom-control-label">Attendance
                                            </label>
                                            <label class="ml-auto">0/Month</label>
                                        </div>
                                        <div class="form-group form-checkbox row mb-0">
                                            <input type="checkbox" id="leave" name="leave"
                                                   class="custom-control-input"/>
                                            <label for="leave" class="custom-control-label">Leave</label>
                                            <label class="ml-auto">0/Month</label>
                                        </div>
                                        <div class="form-group form-checkbox row mb-0">
                                            <input type="checkbox" id="visit" name="visit"
                                                   class="custom-control-input"/>
                                            <label for="visit" class="custom-control-label">Visit</label>
                                            <label class="ml-auto">0/Month</label>
                                        </div>
                                        <div class="form-group form-checkbox row mb-0">
                                            <input type="checkbox" id="timesheet" name="timesheet"
                                                   class="custom-control-input"/>
                                            <label for="timesheet" class="custom-control-label">Timesheet
                                            </label>
                                            <label class="ml-auto">0/Month</label>
                                        </div>
                                        <div class="form-group form-checkbox row mb-0">
                                            <input type="checkbox" id="overtime" name="overtime"
                                                   class="custom-control-input"/>
                                            <label for="overtime" class="custom-control-label">Overtime</label>
                                            <label class="ml-auto">0/Month</label>
                                        </div>
                                        <div class="form-group form-checkbox row mb-0">
                                            <input type="checkbox" id="payment" name="payment"
                                                   class="custom-control-input"/>
                                            <label for="payment" class="custom-control-label">Payment Request
                                            </label>
                                            <label class="ml-auto">0/Month</label>
                                        </div>
                                        <div class="form-group form-checkbox row mb-0">
                                            <input type="checkbox" id="payslip" name="payslip"
                                                   class="custom-control-input"/>
                                            <label for="payslip" class="custom-control-label">Payslip</label>
                                            <label class="ml-auto">0/Month</label>
                                        </div>
                                        <div class="form-group form-checkbox row mb-0">
                                            <input type="checkbox" id="businesstrip" name="businesstrip"
                                                   class="custom-control-input"/>
                                            <label for="businesstrip" class="custom-control-label">Business
                                                Trip
                                            </label>
                                            <label class="ml-auto">0/Month</label>
                                        </div>
                                        <div class="form-group form-checkbox row mb-0">
                                            <input type="checkbox" id="medical" name="medical"
                                                   class="custom-control-input"/>
                                            <label for="medical" class="custom-control-label">Medical</label>
                                            <label class="ml-auto">0/Month</label>
                                        </div>
                                        <div class="form-group form-checkbox row mb-0">
                                            <input type="checkbox" id="exitinterview" name="exitinterview"
                                                   class="custom-control-input"/>
                                            <label for="exitinterview" class="custom-control-label">Exit
                                                Interview
                                            </label>
                                            <label class="ml-auto">0/Month</label>
                                        </div>
                                        <div class="form-group form-checkbox row mb-0">
                                            <input type="checkbox" id="facility" name="facility"
                                                   class="custom-control-input"/>
                                            <label for="facility" class="custom-control-label">Facility
                                            </label>
                                            <label class="ml-auto">0/Month</label>
                                        </div>
                                        <div class="form-group form-checkbox row">
                                            <label class="">Sub Total</label>
                                            <label class="ml-auto">Rp. 2.000.000</label>
                                        </div>
                                        <div class="form-group text-center mb-0">
                                            <div class="col-12">
                                                <button type="button" class="btn btn-success"
                                                        data-toggle="modal" data-target="#exampleModalCenter">
                                                    Lanjutkan
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card shadow" style="border-radius: 13px;">
                            <div class="card-header">
                                <p class="eht-subtile font-weight-bold text-center mb-0">
                                    Detail Paket Yang Didapat
                                </p>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Detail</th>
                                                <th>Support</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Attendance</td>
                                                <td>Mobile &#38; Web Apps</td>
                                            </tr>
                                            <tr>
                                                <td>Payrool &#38; Payment Request</td>
                                                <td>Mobile &#38; Web Apps</td>
                                            </tr>
                                            <tr>
                                                <td>Timesheet &#38; Visit</td>
                                                <td>Mobile &#38; Web Apps</td>
                                            </tr>
                                            <tr>
                                                <td>Medical Reimbursement &#38; Business Trip</td>
                                                <td>Mobile &#38; Web Apps</td>
                                            </tr>
                                            <tr>
                                                <td>Reporting Data all Module</td>
                                                <td>Web Apps</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                     aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Detail Paket Yang Didapat</h5>
                            </div>
                            <div class="modal-body">
                                <div class="row justify-content-center">
                                    <div class="col-12 col-md-12">
                                        <div class="card shadow" style="border-radius: 13px;">
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                    <table class="table table-striped">
                                                        <thead>
                                                            <tr>
                                                                <th>Detail</th>
                                                                <th>Support</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr>
                                                                <td>Attendance</td>
                                                                <td>Mobile &#38; Web Apps</td>
                                                            </tr>
                                                            <tr>
                                                                <td>Payrool &#38; Payment Request</td>
                                                                <td>Mobile &#38; Web Apps</td>
                                                            </tr>
                                                            <tr>
                                                                <td>Timesheet &#38; Visit</td>
                                                                <td>Mobile &#38; Web Apps</td>
                                                            </tr>
                                                            <tr>
                                                                <td>Medical Reimbursement &#38; Business Trip</td>
                                                                <td>Mobile &#38; Web Apps</td>
                                                            </tr>
                                                            <tr>
                                                                <td>Reporting Data all Module</td>
                                                                <td>Web Apps</td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-success">Buy License</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>